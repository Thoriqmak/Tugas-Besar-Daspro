#include<stdio.h>
#include <iostream>
using namespace std;
int main (){
int A[100],B[100],C[100],D[100], i, a,b,c,d,e, o, p, q, r;	
char pilihan;
a = 0;
b = 0;
c = 0;
d = 0;
e = 200;
	printf ("Pilih salah satu poliklinik diatas!(A-D) \n");
	printf ("A. Poli Umum \n");
	printf ("B. Poli Anak \n");
	printf ("C. Poli Gigi \n");
	printf ("D. Poli Gizi \n");
	printf ("Pilihan : ");
for (i=0;i<=e;i++){
	scanf ("%c",&pilihan);
		switch (pilihan){
			case 'A' :
			a += 1;
			o += 1;
			A[o]= a;
			if (a > 50){
			printf ("Maaf, Kuota Telah Habis! segera isi ulang kartu anda!");
			}else { 
				printf ("Nomor antrian : A %d \n", a);
				}
			 break;
			
			case 'B' :
			b += 1;
			p += 1;
			B[p]= b;
			if (b > 50){
			printf ("Maaf, Kuota Telah Habis! Coba lagi besok");
			}else { 
				printf ("Nomor antrian : B %d \n", b);
				}
			break;
				
			case 'C' :
			c += 1;
			q += 1;
			C[q]= c;
			if (c > 50){
			printf ("Maaf, Kuota Telah Habis! Coba lagi besok");
			}else { 
				printf ("Nomor antrian : C %d \n", c);
				}
			break;
					
			case 'D' :
			d += 1;
			r += 1;
			D[r]= d;
			if (d > 50){
			printf ("Maaf, Kuota Telah Habis! Coba lagi besok");
			}else { 
				printf ("Nomor antrian : D %d \n", d);
				} 
			break;

		}
}
return 0;
}
